{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build and debug cpp ",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Code/*.cpp",
                "${workspaceFolder}/Code/dependencies/glad.c",
                "-I",
                "${workspaceFolder}/Code/dependencies/include",
                "-L",
                "${workspaceFolder}/Code/dependencies/lib",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32",
                "-o",
                "${workspaceFolder}/TheLucasGame/runGame.exe" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}